{% extends 'layouts/base.html.twig' %}


{% block body %}

	<div class="content-wrapper">

		<div class="content">
			<div class="container">
				<div class="row">
					<div class="col-lg-12 mt-3">
						<div class="callout callout-success">
							<h5>
								<i class="fas fa-info"></i>
								Employe:
							</h5>
							Le tableau ci-dessous nous affiche les differentes employes disponible dans notre base de donnees ! ENJOY
							<a href="{{ path('employee_new') }}">Creer un nouveau ??</a>
						</div>
					</div>
					{% include "layouts/partials/_flashMessage.html.twig" %}
					<div class="col-lg-12">
						<div class="card card-primary card-outline">
							<div class="card-header">
								<h3 class="card-title">Les employes qui existent dans la base</h3>
								<div class="card-tools">
									<div class="input-group input-group-sm" style="width: 350px;">
										<input type="text" name="table_search" class="form-control float-right" placeholder="Search">

										<div class="input-group-append">
											<button type="submit" class="btn btn-default">
												<i class="fas fa-search"></i>
											</button>
										</div>
									</div>
								</div>
							</div>
							<div class="card-body">
								<table class="table table-bordered table-hover table-striped">
									<thead>
										<tr>
											<th>Nom</th>
											<th>Email</th>
											<th>Skills</th>
											<th>Experiences</th>
											<th>Sex</th>
											<th>Salary</th>
											<th>TakenAt</th>
											<th>options</th>
										</tr>
									</thead>
									<tbody>
										{% for employee in employees %}
											<tr>
												<td>{{ employee.fullName | u.truncate(15, '...')}}</td>
												<td>{{ employee.email | u.truncate(15, '...')}}</td>
												<td>{{ employee.skills | u.truncate(15, '...')}}</td>
												<td>{{ employee.experiences | u.truncate(15, '...')}}</td>
												<td>{{ employee.sex }}</td>
												<td>{{ employee.salary }}</td>
												<td>{{ employee.takenAt ? employee.takenAt|date('Y-m-d') : '' | u.truncate(15, '...')}}</td>
												<td>
													<a class="btn btn-sm btn-primary" href="{{ path('employee_show', {'id': employee.id}) }}">
														<i class="fas fa-folder"></i>
														Visualiser</a>

													<a class="btn btn-sm btn-info" href="{{ path('employee_edit', {'id': employee.id}) }}">
														<i class="fas fa-folder"></i>
														Modifier</a>

													{# <a href="{{ path('employee_show', {'id': employee.id}) }}">show</a> #}
													{# <a href="{{ path('employee_edit', {'id': employee.id}) }}">edit</a> #}
												</td>
											</tr>
										{% else %}
											<tr>
												<td colspan="14">no records found</td>
											</tr>
										{% endfor %}
									</tbody>
								</table>
							</div>
							<div class="card-footer">
								<div class="card-tools">
									<ul class="pagination float-right">
										<li class="page-item">
											<a class="page-link" href="#">&laquo;</a>
										</li>
										<li class="page-item">
											<a class="page-link" href="#">1</a>
										</li>
										<li class="page-item">
											<a class="page-link" href="#">2</a>
										</li>
										<li class="page-item">
											<a class="page-link" href="#">3</a>
										</li>
										<li class="page-item">
											<a class="page-link" href="#">4</a>
										</li>
										<li class="page-item">
											<a class="page-link" href="#">5</a>
										</li>
										<li class="page-item">
											<a class="page-link" href="#">&raquo;</a>
										</li>
									</ul>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>


{% endblock %}
