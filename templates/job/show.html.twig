{% extends 'layouts/base.html.twig' %}

{% block title %}
	GTDBI | Poste :
	{{ job.name }}
{% endblock %}


{% block body %}

	<div class="content-wrapper">

		<div class="content">
			<div class="container">
				<div class="row">
					<div class="col-lg-12 mt-2 mb-1">
						<a class="h3" href="{{ path('job_index') }}">*Poste</a>
					</div>
					<div class="col-lg-12 mt-1">
						<div class="callout callout-danger">
							<h5>
								{{ job.name | upper}}
							</h5>
						</div>
					</div>

					<div class="col-lg-12">
						<div class="card card-primary card-outline">
							<div class="card-header">
								<h3 class="card-title">La liste des employeurs dans cette poste.</h3>
								<div class="card-tools">
									<div class="input-group input-group-sm" style="width: 350px;">
										<input type="text" name="table_search" class="form-control float-right" placeholder="Recherche ...">

										<div class="input-group-append">
											<button type="submit" class="btn btn-default">
												<i class="fas fa-search"></i>
											</button>
										</div>
									</div>
								</div>
							</div>
							<div class="card-body">
								<table class="table table-bordered table-hover table-striped">
									<thead>
										<tr>
											<th>Nom Complet</th>
											<th>E-Mail</th>
											<th>Skills</th>
											<th>Experiences</th>
											<th>Sex</th>
											<th>Salaire</th>
											<th>Date d'embauche</th>
											<th>Options</th>
										</tr>
									</thead>
									<tbody>
										{% set employees = job.employees %}
										{% for employee in employees %}
											<tr>
												<td>{{ employee.fullName }}</td>
												<td>{{ employee.email}}</td>
												<td>{{ employee.skills}}</td>
												<td>{{ employee.experiences}}</td>
												<td>{{ employee.sex}}</td>
												<td>{{ employee.salary}}</td>
												<td>{{ employee.takenAt | date('Y-m-d h:i:s')}}</td>
												<td>
													<a class="btn btn-sm btn-outline-info" href="#">
														<i class="fas fa-folder"></i>
														Visualiser</a>
												</td>
											</tr>
										{% else %}
											<tr>
												<td colspan="3">Aucun donnees trouvees</td>
											</tr>
										{% endfor %}
									</tbody>
								</table>
							</div>
							<div class="card-footer">
								<div class="card-tools">
									<ul class="pagination float-right">
										<li class="page-item">
											<a class="page-link" href="#">&laquo;</a>
										</li>
										<li class="page-item">
											<a class="page-link" href="#">1</a>
										</li>
										<li class="page-item">
											<a class="page-link" href="#">2</a>
										</li>
										<li class="page-item">
											<a class="page-link" href="#">3</a>
										</li>
										<li class="page-item">
											<a class="page-link" href="#">4</a>
										</li>
										<li class="page-item">
											<a class="page-link" href="#">5</a>
										</li>
										<li class="page-item">
											<a class="page-link" href="#">&raquo;</a>
										</li>
									</ul>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>

{% endblock %}
